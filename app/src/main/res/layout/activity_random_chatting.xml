<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_darker"
    android:orientation="vertical"
    tools:context=".Activity.RandomChatting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:alpha="0.6"
        android:background="#604765"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nanumsquareround_bold"
            android:gravity="center"
            android:paddingLeft="65dp"
            android:text="M.A.M"
            android:textColor="#f1e6d9"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/restaurant"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:src="@drawable/restaurant" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="16dp" />

    <LinearLayout
        android:id="@+id/chatting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/left"
            android:gravity="center"
            android:text="안녕하세요"
            android:textColor="#150318"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/right"
            android:gravity="center"
            android:text="안녕하세요"
            android:textColor="#f0e8e8"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/left"
            android:gravity="center"
            android:text="저녁 ㄱ?"
            android:textColor="#150318"
            android:textSize="22sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="낯선이가 대화를 종료했습니다."
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:backgroundTint="#fff"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:textSize="20sp"
            android:text="그럴까요?" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:background="#6d5672"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_send" />
    </LinearLayout>
</LinearLayout>