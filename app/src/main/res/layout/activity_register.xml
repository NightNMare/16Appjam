<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_darker"
    android:orientation="vertical"
    tools:context=".Activity.RegisterActivity">

    <View
        android:id="@+id/top_margin"
        android:layout_width="1dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/regis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_margin"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nanumsquareround_bold"
        android:text="회원가입"
        android:textColor="#f1e6d9"
        android:textSize="28sp" />

    <View
        android:id="@+id/below_margin"
        android:layout_width="1dp"
        android:layout_height="64dp"
        android:layout_below="@id/regis_title" />

    <TextView
        android:id="@+id/regis_id_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/below_margin"

        android:layout_marginLeft="16dp"
        android:fontFamily="@font/nanumsquareround_bold"
        android:text="아이디"
        android:textColor="#fff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/regi_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regis_id_TV"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_rec_edittext"
        android:backgroundTint="#fff"
        android:hint="아이디"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"

        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/regis_passwd_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regi_id"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nanumsquareround_bold"
        android:text="비밀번호"
        android:textColor="#fff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/regi_passwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regis_passwd_TV"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_rec_edittext"
        android:backgroundTint="#fff"
        android:hint="비밀번호"

        android:inputType="textPassword"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/regis_phone_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regi_passwd"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nanumsquareround_bold"
        android:text="전화번호"
        android:textColor="#fff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/regi_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regis_phone_TV"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_rec_edittext"
        android:backgroundTint="#fff"
        android:hint="내 전화번호"
        android:inputType="phone"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/regi_her"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regi_phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_rec_edittext"
        android:backgroundTint="#fff"
        android:hint="상대 전화번호"
        android:inputType="phone"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/regis_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regi_her"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/round_rec"
        android:backgroundTint="#f1e6d9"
        android:fontFamily="@font/nanumsquareround_regular"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#604765"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/regis_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regis_register"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="계정이 있으신가요?"
        android:textColor="#f1e6d9" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:alpha="0.15"
        android:src="@drawable/splash_icon_bigger" />
</RelativeLayout>
